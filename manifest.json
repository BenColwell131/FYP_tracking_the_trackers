{
  "name": "Tracking the Trackers",
  "version": "1.0",
  "description": "Monitor WebSocket Activity",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
  "background": {
     "scripts": ["src/js/background.js"],
     "persistent": false
   },
   "browser_action": {
     "default_popup": "src/html/popup.html",
     "default_icon": {
       "16": "src/assets/images/ttt_v2_16.png",
       "32": "src/assets/images/ttt_v2_32.png",
       "48": "src/assets/images/ttt_v2_48.png",
       "128": "src/assets/images/ttt_v2_128.png"
     }
   },
   "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "run_at": "document_start",
       "js": ["src/js/contentScript.js"]
     }
   ],
   "web_accessible_resources": ["src/js/webSocketPatch.js", "src/assets/filters/yoyo.txt"],
   "options_page": "src/html/options.html",
   "icons": {
      "16": "src/assets/images/ttt_v2_16.png",
      "32": "src/assets/images/ttt_v2_32.png",
      "48": "src/assets/images/ttt_v2_48.png",
      "128": "src/assets/images/ttt_v2_128.png"
    },
  "manifest_version": 2
}
